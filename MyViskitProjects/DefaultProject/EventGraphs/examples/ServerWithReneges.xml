<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimEntity name="ServerWithReneges" package="examples" version="ServerWithReneges" extend="SimEntityBase" description="Simple Server process where Arrival entities can decide to renege and leave the Server queue before being serviced" xsi:noNamespaceSchemaLocation="http://diana.nps.edu/Simkit/simkit.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Parameter name="numberServers" type="int" description=""/>
    <Parameter name="serviceTime" type="simkit.random.RandomVariate" description=""/>
    <Parameter name="renegeTime" type="simkit.random.RandomVariate" description=""/>
    <StateVariable name="numberAvailableServers" type="int" description=""/>
    <StateVariable name="queue" type="java.util.LinkedList&lt;Integer&gt;" description=""/>
    <StateVariable name="numberServed" type="int" description=""/>
    <StateVariable name="numberReneges" type="int" description="this state variable stores the number of reneges as a Java int.">
        <Comment>this state variable stores the number of reneges</Comment>
        <Comment>as a Java int.</Comment>
    </StateVariable>
    <Event name="Run" description="">
        <Comment></Comment>
        <StateTransition state="numberAvailableServers">
            <Assignment value="getNumberServers()"/>
        </StateTransition>
        <StateTransition state="queue">
            <Operation method="clear()"/>
        </StateTransition>
        <StateTransition state="numberServed">
            <Assignment value="0"/>
        </StateTransition>
        <StateTransition state="numberReneges">
            <Assignment value="0"/>
        </StateTransition>
        <Code></Code>
        <Coordinate x="80.0" y="80.0"/>
    </Event>
    <Event name="Arrival" description="">
        <Comment></Comment>
        <Argument name="customer" type="java.lang.Integer" description="empty"/>
        <StateTransition state="queue">
            <Operation method="add(customer)"/>
        </StateTransition>
        <Schedule delay="renegeTime.generate()" event="Renege" priority="DEFAULT">
            <EdgeParameter value="customer"/>
        </Schedule>
        <Schedule delay="0.0" event="StartService" condition="getNumberAvailableServers() &gt; 0" priority="DEFAULT"/>
        <Code></Code>
        <Coordinate x="80.0" y="170.0"/>
    </Event>
    <Event name="StartService" description="">
        <LocalVariable name="customer" type="java.lang.Integer" value="queue.getFirst()">
            <Comment></Comment>
        </LocalVariable>
        <StateTransition state="queue">
            <Operation method="removeFirst()"/>
        </StateTransition>
        <StateTransition state="numberAvailableServers">
            <Assignment value="numberAvailableServers - 1"/>
        </StateTransition>
        <Cancel event="Renege">
            <EdgeParameter value="customer"/>
        </Cancel>
        <Schedule delay="serviceTime.generate()" event="EndService" priority="DEFAULT">
            <EdgeParameter value="customer"/>
        </Schedule>
        <Coordinate x="210.0" y="170.0"/>
    </Event>
    <Event name="EndService" description="">
        <Argument name="customer1" type="java.lang.Integer" description="empty"/>
        <StateTransition state="numberAvailableServers">
            <Assignment value="numberAvailableServers+1"/>
        </StateTransition>
        <StateTransition state="numberServed">
            <Assignment value="numberServed+1"/>
        </StateTransition>
        <Schedule event="StartService" condition="queue.size() &gt; 0" priority="HIGH"/>
        <Coordinate x="350.0" y="170.0"/>
    </Event>
    <Event name="Renege" description="">
        <Argument name="customer2" type="java.lang.Integer" description="empty"/>
        <StateTransition state="queue">
            <Operation method="remove(customer2)"/>
        </StateTransition>
        <StateTransition state="numberReneges">
            <Assignment value="numberReneges+1"/>
        </StateTransition>
        <Coordinate x="140.0" y="290.0"/>
    </Event>
</SimEntity>
