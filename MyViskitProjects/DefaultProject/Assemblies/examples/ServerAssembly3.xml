<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<SimkitAssembly name="ServerAssembly3" version="1.0" package="examples" description="Show an example server demonstrating a markov chain" xsi:noNamespaceSchemaLocation="../../../../Schemas/assembly.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <SimEntity name="arrival" type="examples.ArrivalProcess" description="Customer arrival process">
        <FactoryParameter factory="simkit.random.RandomVariateFactory" type="simkit.random.RandomVariate">
            <TerminalParameter name="" value="Exponential" type="java.lang.String"/>
            <TerminalParameter name="" value="1.7" type="double"/>
        </FactoryParameter>
        <Coordinate x="90.0" y="90.0"/>
    </SimEntity>
    <SimEntity name="server" type="examples.SimpleServer" description="Server process handling arriving customers">
        <FactoryParameter factory="simkit.random.RandomVariateFactory" type="simkit.random.RandomVariate">
            <TerminalParameter name="" value="Gamma" type="java.lang.String"/>
            <TerminalParameter name="" value="2.1" type="double"/>
            <TerminalParameter name="" value="1.6" type="double"/>
        </FactoryParameter>
        <TerminalParameter name="totalNumberServers" value="2" type="int"/>
        <Coordinate x="280.0" y="90.0"/>
    </SimEntity>
    <PropertyChangeListener name="numInQueueStat" type="simkit.stat.SimpleStatsTimeVarying" mode="replicationStat" meanStatistics="false" countStatistics="true" description="statistic to measure queue status as it occurs">
        <TerminalParameter name="p[0] : " value="numberInQueue" type="java.lang.String"/>
        <Coordinate x="200.0" y="220.0"/>
    </PropertyChangeListener>
    <PropertyChangeListener name="numAvailServersStat" type="simkit.stat.SimpleStatsTimeVarying" mode="replicationStat" meanStatistics="false" countStatistics="true" description="statistics regarding number of available servers">
        <TerminalParameter name="p[0] : " value="numberAvailableServers" type="java.lang.String"/>
        <Coordinate x="350.0" y="230.0"/>
    </PropertyChangeListener>
    <PropertyChangeListener name="simplePropertyDumper" type="simkit.util.SimplePropertyDumper" meanStatistics="false" countStatistics="true" description="record and dump simple property values">
        <Coordinate x="280.0" y="290.0"/>
    </PropertyChangeListener>
    <PropertyChangeListenerConnection property="numberInQueue" listener="numInQueueStat" source="server" description="listen for changes to number of customers in queue"/>
    <PropertyChangeListenerConnection property="numberAvailableServers" listener="numAvailServersStat" source="server" description="property change connection listening to number of available servers"/>
    <PropertyChangeListenerConnection property="" listener="simplePropertyDumper" source="server" description="monitor all simple property changes"/>
    <Adapter name="adptr_3" eventHeard="Arrival" eventSent="Arrival" from="arrival" to="server" description="adapter connection between arrival] and server processes"/>
    <Output entity="arrival"/>
    <Output entity="server"/>
    <Schedule stopTime="1000.0" verbose="false" saveReplicationData="true"/>
    <Experiment replicationsPerDesignPoint="2" totalSamples="5" timeout="5000"/>
</SimkitAssembly>
